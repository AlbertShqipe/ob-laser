    <link rel="preload" as="image" href="/assets/legs-12942fe7ce4699c3f3087014d53f807dcc9317fb056d2776e5de31e6fb3633d3.png">

    <!-- Primary Meta Tags -->
    <meta name="title" content="OB Laser">
